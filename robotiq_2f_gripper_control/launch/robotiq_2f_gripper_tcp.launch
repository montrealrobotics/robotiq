<launch>
  <arg name="gripper_name" default="gripper" />
  <arg name="port" default="63352" />
  <arg name="activate" default="True" />
  <arg name="ipaddr" default="127.0.0.1" />

  <node pkg="robotiq_2f_gripper_control" type="robotiq_2f_gripper_tcp_node" name="gripper_server" output="screen">
      <param name="ipaddr" type="str" value="$(arg ipaddr)" />
      <param name="activate" type="bool" value="$(arg activate)" />
      <param name="port" type="int" value="$(arg port)"/>
      
      <remap from="output" to="/$(arg gripper_name)/output" />
      <remap from="input" to="/$(arg gripper_name)/input" />
    </node>
</launch>
